<!--components/relam/index.wxml-->
<view class="container">
    <view class="sku-preview">
        <image class="sku-img"></image>
        <view class="sku-description">
            <text class="title">测试sku</text>
            <view>
                <view class="price-row">
                    <l-price value="777"
                             color="#157658"
                             value-size="28"
                             unit-size="20"
                             autofix></l-price>
                    <l-price value="999"
                             color="#999999"
                             size="26"
                             l-class="discount-price"
                             deleted></l-price>
                </view>
                <view class="sku-pending">
                    <text>请选择：</text>
                </view>
            </view>
        </view>
    </view>
    
    <view class="hr"></view>
<!--    sku-row-->
    <block wx:for="{{fences}}" wx:key="{{index}}">
        <s-fence x="{{index}}" bind:celltap="onCellTap" fence="{{item}}"></s-fence>
    </block>

    <view class="counter-container">
 <!--		<l-counte></l-counte>-->
    </view>

</view>
